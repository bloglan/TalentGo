
@{
    ViewBag.Title = "退回报名表";
}

<div class="page-header">
    <h1>退回报名表</h1>
</div>
@using (Html.BeginForm())
{
    <p>即将把报名表退回给求职者。确定要这样做吗？</p>
    <p>@Html.ValidationSummary()</p>
    <p>
        <button type="submit" class="btn btn-danger">退回</button>
        @Html.ActionLink("取消", "Detail", new { id = this.Request["id"] }, new { @class = "btn btn-default" })
    </p>
}