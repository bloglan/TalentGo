@model IQueryable<Examination>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>WhenPublish</th>
            <th>AttendanceConfirmationExpiresAt</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Any())
        {
            foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@(item.WhenPublished.HasValue?item.WhenPublished.Value.ToString():"未发布")</td>
                    <td>@item.AttendanceConfirmationExpiresAt</td>
                    <td>
                        @Html.ActionLink("Detail", "Detail", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>