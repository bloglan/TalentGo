@model Person

<div class="row">
    <div class="col-md-6">
        <div class="thumbnail">
            <img src="@Url.Action("Index", "File", new { id = Model.IDCardFrontFile })" class="img-responsive">
        </div>
        <div class="thumbnail">
            <img src="@Url.Action("Index", "File", new { id = Model.IDCardBackFile })" class="img-responsive">
        </div>
    </div>
    <div class="col-md-6">
        <p>姓名：@Model.DisplayName</p>
        <p>性别：@(Model.Sex == Sex.Male ? "男" : "女")</p>
        <p>民族：@Model.Ethnicity</p>
        <p>出生：@Model.DateOfBirth.ToString()</p>
        <p>住址：@Model.Address</p>
        <p>公民身份号码：@Model.IDCardNumber</p>
        <p>签发机关：@Model.Issuer</p>
        <p>有效期限：@Model.IssueDate - @(Model.ExpiresAt.HasValue ? Model.ExpiresAt.Value.ToShortDateString() : "长期")</p>
    </div>
</div>
