@model RecruitmentPlan
@{
    ViewBag.Title = Model.Title;
}

<div class="page-header">
    <h1>@Model.Title</h1>
</div>
<h2>摘要</h2>
<p>招聘简章：@Html.ActionLink("查看招聘简章", "RecruitmentContent", new { id = Model.Id }, new { @class = "btn btn-default" }) @Html.ActionLink("编辑", "EditRecruitmentContent", new { id = Model.Id }, new { @class = "btn btn-default" })</p>
<p>发布人：@Model.Publisher</p>
<p>报名截止时间：@Model.EnrollExpirationDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
<p>创建时间：@Model.WhenCreated.ToShortDateString()</p>
<p>发布时间：@(Model.WhenPublished.HasValue ? Model.WhenPublished.Value.ToShortDateString() : "未发布")</p>

<h2>发布的职位</h2>
<p>@Html.ActionLink("创建职位", "CreateJob", new { id = Model.Id }, new { @class = "btn btn-default" })</p>
@Html.Partial("JobList", Model.Jobs)

