@model JobEditViewModel
@{
    ViewBag.Title = "编辑职位 " + Model.Name;
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
@using (Html.BeginForm())
{
    @Html.Partial("JobEditor")
    <button type="submit" class="btn btn-primary">保存</button>
    @Html.ActionLink("取消", "Detail", new { id = Html.ViewContext.RouteData.Values["id"] })
}