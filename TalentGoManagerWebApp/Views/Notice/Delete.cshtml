@model Notice

@{
    ViewBag.Title = "删除公告";
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>

<p>确实要删除这个公告吗？</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <button type="submit" class="btn btn-danger">删除</button> |
        @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-default" })
    </div>
}
