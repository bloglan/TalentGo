<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title>@ViewBag.Title - 曲靖烟草招聘</title>
	@Styles.Render("~/Content/css")
	@Styles.Render("~/Content/bootstrapDatetimePicker")

	@Styles.Render("~/Content/jqueryuicss")
	
	@RenderSection("HeadScript", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("曲靖烟草招聘管理", "Index", "Home", new { area = "Mgmt" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
					<li>@Html.ActionLink("招聘报名管理", "Index", "RecruitmentPlan")</li>
					<li>@Html.ActionLink("通知公告管理", "Index", "Article")</li>
					<li>@Html.ActionLink("用户管理", "UserList", "Users")</li>
					<li>@Html.ActionLink("基础数据管理", "Index", "BaseData")</li>
					<li>@Html.ActionLink("系统维护", "Index", "Maintenance")</li>
					<li>@Html.ActionLink("网站首页", "Index", "Home", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 云南省烟草公司曲靖市公司</p>
        </footer>
    </div>
	    
	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/bootstrap")
	
	@*@Scripts.Render("~/bundles/jqueryui")*@
		
    @RenderSection("scripts", required: false)
	@Html.RenderScripts()
</body>
</html>