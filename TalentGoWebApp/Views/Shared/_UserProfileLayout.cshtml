
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
<div class="row">
    <div class="col-md-3">
        <ul class="list-group">
            @Html.ActionLink("概要", "Index", "UserProfile", null, new { @class = "list-group-item" })
            @Html.ActionLink("报名表", "ApplicationForm", "UserProfile", null, new { @class = "list-group-item" })
            @Html.ActionLink("准考证", "AdmissionTicket", "UserProfile", null, new { @class = "list-group-item" })
            @Html.ActionLink("修改密码", "ChangePassword", "UserProfile", null, new { @class = "list-group-item" })
            @Html.ActionLink("修改移动电话号码", "ChangePhoneNumber", "UserProfile", null, new { @class = "list-group-item" })
            @Html.ActionLink("修改电子邮件地址", "ChangeEmail", "UserProfile", null, new { @class = "list-group-item" })
        </ul>
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-info">注销登录</a>
        }
    </div>
    <div class="col-md-9">
        @RenderBody()
    </div>
</div>

@section head
{
    @RenderSection("head", false)
}

@section scripts
{
    @RenderSection("scripts", false)
}