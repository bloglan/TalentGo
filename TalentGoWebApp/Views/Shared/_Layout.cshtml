<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title>@ViewBag.Title - 曲靖烟草招聘</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jqueryuicss")
    @Styles.Render("~/Content/bootstrapDatetimePicker")

    @RenderSection("head", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    曲靖烟草招聘
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("首页", "Index", "Home")</li>
                    <li>@Html.ActionLink("招聘职位", "Index", "Recruitment")</li>
                    <li>@Html.ActionLink("报名表", "Index", "ApplicationForm")</li>
                    @*<li>@Html.ActionLink("考试", "Index", "Examination")</li>*@
                    <li>@Html.ActionLink("通知公告", "Index", "Notice")</li>
                </ul>
                @Html.Action("LoginPartial", "Home");
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 云南省烟草公司曲靖市公司</p>
            <p>警告：本站点含有烟草内容，谢绝十八岁以下人士进入！</p>
            <ul class="list-inline">
                <li>@Html.ActionLink("支持", "Support", "Help")</li>
                <li>@Html.ActionLink("常见问题解答", "FAQ", "Help")</li>
                <li>@Html.ActionLink("隐私策略", "Privacy", "Help")</li>
            </ul>
        </footer>
    </div>


    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    @Html.RenderScripts()
</body>
</html>
