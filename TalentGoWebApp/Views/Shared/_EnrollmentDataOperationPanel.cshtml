@model ApplicationForm

@if (!Model.WhenCommited.HasValue)
{


	if (Model.RecruitmentPlan.EnrollExpirationDate >= DateTime.Now)
	{
		@Html.ActionLink("修改报名表", "Enroll", null, new { @class = "btn btn-default" })

		@Html.ActionLink("管理报名资料", "UploadArchives", null, new { @class = "btn btn-default" })
		@Html.ActionLink("提交报名", "CommitEnrollment", null, new { @class = "btn btn-default" })
	}
}
else
{
	if (Model.Approved.HasValue && Model.Approved.Value)
	{
		if (!Model.WhenAnnounced.HasValue)
		{

			@Html.ActionLink("确认参加考试", "AnnounceForExam", null, new { @class = "btn btn-default" })

		}
	}
}