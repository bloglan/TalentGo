        @Html.DescriptionFor(m => m.Issuer)
        @Html.ValidationMessageFor(m => m.Issuer, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IssueDate, new { @class = "control-label" })
        @Html.EditorFor(m => m.IssueDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.DescriptionFor(m => m.IssueDate)
        @Html.ValidationMessageFor(m => m.IssueDate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ExpiresAt, new { @class = "control-label" })
        @Html.EditorFor(m => m.ExpiresAt, new { htmlAttributes = new { @class = "form-control" } })
        @Html.DescriptionFor(m => m.ExpiresAt)
        @Html.ValidationMessageFor(m => m.ExpiresAt, "", new { @class = "text-danger" })
    </div>
    @Html.ValidationSummary()
    <button type="submit" class="btn btn-primary">下一步</button>
    @Html.ActionLink("暂时跳过", "Index", "Home")
}

